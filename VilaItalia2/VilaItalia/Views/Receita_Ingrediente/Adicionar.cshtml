@model VilaItalia.Models.Receita_Ingrediente

@{
    ViewBag.Title = "Adicionar";
}

<h2>Adicionar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>InsumoFicha</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Receita_IngredienteId)

        <div class="form-group">
            <label class="control-label col-md-2"> Quantidade Pizza Media </label>
            <div class="col-md-10">
                <input type="text" name="quantidadeM" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2"> Quantidade Pizza Grande </label>
            <div class="col-md-10">
                <input type="text" name="quantidadeG" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2"> Quantidade Pizza Família </label>
            <div class="col-md-10">
                <input type="text" name="quantidadeF" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2"> Preço Quantidade Media </label>
            <div class="col-md-10">
                <input type="text" name="precoM" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2"> Preço Quantidade Grande </label>
            <div class="col-md-10">
                <input type="text" name="precoG" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2"> Preço Quantidade Família </label>
            <div class="col-md-10">
                <input type="text" name="precoF" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
